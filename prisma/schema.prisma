generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Room {
  id Int @id
  status String
  players Player[]
}

model Player {
  id Int @id @default(autoincrement())

  telegram_id String?

  real_name String
  fiction_name String?

  status String @default("active")
  opened_at DateTime?

  room Room @relation(fields: [room_id], references: [id])
  room_id Int
}
